pipeline {
    agent any

    environment {
        // Variables de entorno
        DOCKER_REPO = 'danielsabana/componente_patrones'
    }
    parameters {
        string(name: 'tag_image', defaultValue: 'lts', description: 'tag imagen' )
    }

    stages {
        stage('Checkout') {
            steps {
                // Clonar el c√≥digo fuente desde el repositorio de Git
                git branch: 'main', url: 'https://github.com/software-unisabana/app-example-k8s.git'
            }
        }

        stage('Build') {
            steps {
                // Construir el proyecto Java usando Gradle
                sh './gradlew clean build'
            }
        }

        stage('Test') {
            steps {
                // Ejecutar pruebas
                sh './gradlew test'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Construir la imagen Docker
                sh "docker build -t ${DOCKER_REPO}:${tag_image} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials-id') {
                        sh "docker push ${DOCKER_REPO}:${tag_image}"
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
